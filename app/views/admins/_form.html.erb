<% if admin_signed_in? %>
  <%= render :partial => "admins/shared/admin_nav_bar" %>
  <div class="row d-flex justify-content-center">
    <div class="col-md-4 col-md-offset-4 rounded-3">
      <div class="login-panel panel panel-default">
        <br>
        <div class="panel-heading">
          <h3> <%= action_name.camelize %> Admin </h3>
        </div>
        <div class="panel-body">
          <%= form_with(model: admin) do |form| %>
            <% if admin.errors.any? %>
              <div style="color: red">
                <h2><%= pluralize(admin.errors.count, "error") %> prohibited this admin from being saved:</h2>
                <ul>
                  <% admin.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="field">
              <%= form.label :name, style: "display: block" %>
              <%= form.text_field :name, class: 'form-control' %>
            </div>

            <div class="field">
              <%= form.label :email, style: "display: block" %>
              <%= form.text_field :email, class: 'form-control' %>
            </div>
            <div class="field">
              <%= form.label :passoword, style: "display: block" %>
              <%= form.password_field :password, class: 'form-control' %>
            </div>

            <br>
            <div class="actions">
              <%= form.submit class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <footer>
    <%= button_to "Back", admins_path, :method => "get", class: "btn btn-outline-dark back-button" %>
  </footer>

  <style media="screen">
    body {
      background: -webkit-gradient(linear, left top, left bottom, from(#F0F8FF), to(#B0C4DE)) fixed;
    }
    
    .back-button {
      position: absolute;
      left: 15px;
      bottom: 15px;
    }
  </style>
<% else %>
  <%= render :partial => "main/shared_error" %>
<%end %>
