<div class="row d-flex justify-content-center">
  <div class="col-md-4 col-md-offset-4 rounded-3">
    <div class="login-panel panel panel-default">
      <br>
      <div class="panel-heading">
        <h3> Please Sign In </h3>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: admin_session_path(resource_name), html: { method: :put }) do |f| %>
              <%= devise_error_messages! %>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <div class="field">
                <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
              </div>
              <br>
              <%= f.submit "Update", class: "btn btn-primary" %>
            <% end %>
        </fieldset>
      </div>
    </div>
  </div>
</div>
<footer>
  <%= button_to "Back", root_path, :method => "get", class: "btn btn-outline-dark back-button" %>
</footer>

<style media="screen">
  body {
    background: -webkit-gradient(linear, left top, left bottom, from(#F0F8FF), to(#B0C4DE)) fixed;
  }

  .back-button {
    position: absolute;
    left: 15px;
    bottom: 15px;
  }

</style>