<%= render :partial => "admins/shared/admin_nav_bar" %>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
    </tr>
  </thead>
  <tbody>
    <% Admin.all.each do |admin| %>
    <tr>
      <th><%= admin.id%></th>
      <th><%= admin.name%></th>
      <th><%= admin.email%></th>
    </tr>
    <% end %>
  </tbody>
</table>



<footer>
  <%= button_to "Back", admins_path, :method => "get", class: "btn btn-outline-dark back-button" %>
</footer>
<style media="screen">

  .table{
    margin:auto;
  }

  .back-button {
    position: absolute;
    left: 15px;
    bottom: 15px;
  }

  body {
    background: -webkit-gradient(linear, left top, left bottom, from(#F0F8FF), to(#B0C4DE)) fixed;
  }
</style>
