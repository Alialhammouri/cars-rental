<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Editing <%= resource_name.to_s.humanize %>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <%= form_for(resource, as: resource_name, url: admin_session_path(resource_name), html: { method: :put }) do |f| %>
              <%= devise_error_messages! %>

              <div class="field">
                <%= f.label :name %><br />
                <%= f.text_field :name, autofocus: true, class: 'form-control' %>
              </div>

              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, class: 'form-control' %>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <div class="field">
                <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                <button type="button" class="btn btn-link btn-sm" id="getNewPass">Generate</button>
                <%= f.text_field :password, autocomplete: "off", class: 'form-control' %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation %><br />
                <%= f.text_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
              </div>

              <div class="field">
                <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
              </div>

              <%= f.submit "Update", class: 'btn btn-default' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style media="screen">
  body {
    background: -webkit-gradient(linear, left top, left bottom, from(#F0F8FF), to(#B0C4DE)) fixed;
  }
</style>