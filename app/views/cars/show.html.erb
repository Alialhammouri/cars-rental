<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <tbody>
          <% Car.column_names.each do |col| %>
            <tr>
              <td><strong><%= col == 'id' ? '#' : col.humanize %></strong></td>
              <td><%= @car.send(col) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="col-lg-12">
    <%= link_to 'Back', own_cars_path, class: "btn btn-info" %>
    <%= link_to 'Edit', edit_car_path(@car), class: "btn btn-primary" %>
  </div>
</div>


<style media="screen">
  body {
    background: -webkit-gradient(linear, left top, left bottom, from(#F0F8FF), to(#A9A9A9)) fixed;
  }
  
  .back-button {
    position: absolute;
    left: 15px;
    bottom: 15px;
  }
</style>
