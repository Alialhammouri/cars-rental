<% if office_signed_in? %>
  <%= render :partial => "offices/shared/office_nav_bar" %>
  <div class="row d-flex justify-content-center">
    <div class="col-md-4 col-md-offset-4 rounded-3">
      <div class="login-panel panel panel-default">
        <br>
        <div class="panel-heading">
          <h3> Fill your personal information </h3>
        </div>
        <div class="panel-body">
          <%= form_for(@office) do |form| %>
            <% if @office.errors.any? %>
              <div style="color: red">
                <h2><%= pluralize(@office.errors.count, "error") %> prohibited this admin from being saved:</h2>
                <ul>
                  <% @office.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div>
              <%= form.label :offce_name, style: "display: block" %>
              <%= form.text_field :name, class: 'form-control' %>
            </div>

            <div>
              <%= form.label :phone_number, style: "display: block" %>
              <%= form.text_field :phone_number, class: 'form-control' %>
            </div>

            <div>
              <%= form.label :address, style: "display: block" %>
              <%= form.text_field :address, class: 'form-control' %>
            </div>

            <div style="display: none">
              <%= form.label :verified, style: "display: block" %>
              <%= form.check_box :verified, value: false, class: 'form-control' %>
            </div>
            
            <br>
            <div class="actions">
              <%= form.submit class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <footer>
    <%= button_to "Back", offices_path, :method => "get", class: "btn btn-outline-dark back-button" %>
  </footer>

  <style media="screen">
    body {
      background: -webkit-gradient(linear, left top, left bottom, from(#F0F8FF), to(#A9A9A9)) fixed;
    }
    
    .back-button {
      position: absolute;
      left: 15px;
      bottom: 15px;
    }
  </style>
<% else %>
  <%= render :partial => "main/shared_error" %>
<%end %>
